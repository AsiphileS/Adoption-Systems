<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #cfe78899;
    }

    .wrapper {
        margin-top: 30px;
        /*background-color:#678119;*/
    }

        .wrapper h1 {
            font-size: 20px;
            text-align: center;
        }

    .containerr {
        width: 50%;
        margin: 10px 10px;
        padding: 20px;
        background-color: #67811955;
        border: 1px solid #ddd;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        border-radius: 25px;
        border: dashed 2px #678119;
    }

        .containerr:active {
            background-color: green;
        }

    .picture {
        width: 30%;
        margin-right: 20px;
    }

        .picture img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
        }

    .info {
        width: 60%;
    }

        .info h2 {
            margin-top: 0;
        }

        .info ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .info li {
            margin-bottom: 10px;
        }

        .info a {
            text-decoration: none;
            color: #337ab7;
        }

            .info a:hover {
                color: #23527c;
            }

    .cild-profiles {
        display: flex;
    }

    #backButton, #nextButton {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
    }

    /* Back button styles */
    #backButton {
        background-color: #ff9900; /* Orange background */
        color: #fff; /* White text */
        margin-right: 20px;
    }

        #backButton:hover {
            background-color: #ff7f00; /* Darker orange background */
        }

        #backButton:active {
            background-color: #ff4d00; /* Even darker orange background */
            transform: translateY(2px); /* Slight movement */
        }

    button[type="button"] {
        /* styles for the button */
        background-color: #4CAF50; /* green background */
        color: #fff; /* white text */
        padding: 12px 24px; /* add some padding */
        border: none; /* remove default border */
        border-radius: 5px; /* add some rounded corners */
        cursor: pointer; /* change cursor on hover */
    }

        button[type="button"]:hover {
            /* styles for the button on hover */
            background-color: #3e8e41; /* darker green background on hover */
        }
</style>
