@model  List<Adoption_system.Models.Clientform>

@{
    ViewData["Title"] = "Client Details";
    Layout = null;
}
<h3>@ViewData["Title"]</h3>
<hr />
<form>
    <table class="table table-responsive table-hover">
        <thead>
            <tr class="table-active">
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Age</th>
                <th>Gender</th>
                <th>IdentityNumber</th>
                <th>AnnualSalary</th>
                <th>Email</th>
                <th>Phone</th>
                <th>EmploymentStatus </th>
                <th>Address</th>
                <th>MaritalStatus</th>
                <th>ChildName</th>
                <th>ReasonForAdoption</th>
                <th>CreatedDate</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {

               foreach (var clientform in Model)
             {
                <tr>
                    <td>@clientform.Id</td>
                    <td>@clientform.FirstName</td>
                    <td>@clientform.LastName</td>
                    <td>@clientform.Age</td>
                    <td>@clientform.Gender</td>
                    <td>@clientform.IdentityNumber</td>
                    <td>@clientform.AnnualSalary</td>
                    <td>@clientform.Email</td>
                    <td>@clientform.Phone</td>
                    <td>@clientform.EmploymentStatus</td>
                    <td>@clientform.Address</td>
                    <td>@clientform.MaritalStatus</td>
                    <td>@clientform.ChildName</td>
                    <td>@clientform.ReasonForAdoption</td>
                    <td>@clientform.CreatedDate</td>
                </tr>
                <div class="btn-group btn-group-sm">
                    <a asp-controller="Clientform" asp-action="Edit" asp-route-id="@clientform.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Clientform" asp-action="Edit" asp-route-id="@clientform.Id" class="btn btn-primary">Delete</a>
                </div>
             }

            }
           else
            { 
             
            }
        </tbody>
    </table>
</form>



