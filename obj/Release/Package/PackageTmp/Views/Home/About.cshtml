
@{
    ViewBag.Title = "About";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<section class="about_section ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/content/images/about-img.jpg" alt="">
                </div>
            </div>
            <div class="col-md-5 col-lg-4">
                <div class="detail-box">
                    <div class="heading_container">
                        <h2>
                            A Few words about us
                        </h2>
                    </div>
                    <p>
                        Welcome to AdoptAChild.org, where our mission is to make the adoption process as seamless and supportive as possible.
                        We are dedicated to connecting loving families with children in need of a forever home.
                        Our app provides a user-friendly platform designed to simplify every step of the adoption journey.
                        From browsing profiles of children to managing applications and connecting with adoption agencies, AdoptAChild is here to guide you through the process with ease and compassion.
                        Our team is committed to creating a transparent, efficient, and heartwarming adoption experience.
                        Join us in making a difference—one child, one family at a time.
                    </p>

                </div>
            </div>
        </div>
    </div>
</section>
