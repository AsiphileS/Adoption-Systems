@model Adoption_system.Models.Clientform
@using (Html.BeginForm("AdoptionForm", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
        <div style="color; font-size:15px;">
            @ViewBag.Message
        </div>


    }
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #cfe788;
        }


        .container {
            width: 100%;
            margin: 40px auto;
            padding: 20px;
            /*background: #678119;*/
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }


        .form-group {
            margin-bottom: 20px;
            display: inline-block;
            padding-right: 30px;
        }

            .form-group label {
                display: block;
                margin-bottom: 10px;
            }

            .form-group input[type="file"] {
                width: 100%;
                padding: 10px;
                font-size: 16px;
            }

            .form-group input[type="text"],
            .form-group input[type="number"],
            .form-group select {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border: 1px solid #ccc;
            }

            .form-group input[type="radio"] {
                margin-right: 10px;
            }

        #nextButton {
            background-color: #008CBA;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
        }

            #nextButton:hover {
                background-color: #00698f;
            }

            #nextButton:active {
                background-color: #005579;
                transform: translateY(2px);
            }


        #adoptionForm {
            width: 50%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 10px;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            padding: 10px 20px;
            background-color: #008CBA;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button {
            padding: 10px 20px;
            background-color: #00698f;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #3e8e41;
            }

        .SubmitBtn {
            padding-left: 200px;
        }

        #ChildName {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        #AdoptionReason {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
    </style>

    <center>
        <table>

            <tr>
                <td>
                    @Html.LabelFor(m => m.FirstName)
                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </td>
                <td>
                    @Html.LabelFor(m => m.LastName)
                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.Age)
                    @Html.TextBoxFor(m => m.Age, new { type = "number", min = 18, max = 100 })
                    @Html.ValidationMessageFor(m => m.Age)
                </td>
                <td>
                    @Html.LabelFor(m => m.Gender)
                    @Html.RadioButtonFor(m => m.Gender, "Male") Male<br />
                    @Html.RadioButtonFor(m => m.Gender, "Female") Female<br />
                    @Html.RadioButtonFor(m => m.Gender, "Other") Other<br />
                    @Html.ValidationMessageFor(m => m.Gender)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.IdentityNumber)
                    @Html.TextBoxFor(m => m.IdentityNumber, new { placeholder = "Enter your ID or Passport number" })
                    @Html.ValidationMessageFor(m => m.IdentityNumber)
                </td>
                <td>
                    @Html.LabelFor(m => m.AnnualSalary)
                    @Html.TextBoxFor(m => m.AnnualSalary, new { type = "number" })
                    @Html.ValidationMessageFor(m => m.AnnualSalary)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { type = "Email" })
                    @Html.ValidationMessageFor(m => m.Email)
                </td>
                <td>
                    @Html.LabelFor(m => m.Phone)
                    @Html.TextBoxFor(m => m.Phone, new { type = "tel" })
                    @Html.ValidationMessageFor(m => m.Phone)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.EmploymentStatus)
                    @Html.RadioButtonFor(m => m.EmploymentStatus, "Employed") Employed<br />
                    @Html.RadioButtonFor(m => m.EmploymentStatus, "Self Employed") Self Employed<br />
                    @Html.RadioButtonFor(m => m.EmploymentStatus, "Unemployed") Unemployed<br />
                    @Html.ValidationMessageFor(m => m.EmploymentStatus)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.Address)
                    @Html.TextBoxFor(m => m.Address)
                    @Html.ValidationMessageFor(m => m.Address)
                </td>
                <td>
            <tr>
                <td>
                    @Html.LabelFor(m => m.MaritalStatus)
                    @Html.RadioButtonFor(m => m.MaritalStatus, "Single") Single<br />
                    @Html.RadioButtonFor(m => m.MaritalStatus, "Married") Married<br />
                    @Html.RadioButtonFor(m => m.MaritalStatus, "Divorced") Divorced<br />
                    @Html.ValidationMessageFor(m => m.MaritalStatus)
                </td>
                <td>
                    @Html.LabelFor(m => m.ChildName)
                    @Html.TextBoxFor(m => m.ChildName, new { placeholder = "Child's Name" })
                    @Html.ValidationMessageFor(m => m.ChildName)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @Html.LabelFor(m => m.ReasonForAdoption)
                    @Html.TextAreaFor(m => m.ReasonForAdoption, new { placeholder = "Reason for Adoption" })
                    @Html.ValidationMessageFor(m => m.ReasonForAdoption)
                </td>
            </tr>
            <tr>
                <td>
                    <button id="backButton">Back</button>
                </td>
                <td class="nextBtn">
                    <button id="nextButton">Next</button>
                </td>
            </tr>
        </table>
    </center>
}

   