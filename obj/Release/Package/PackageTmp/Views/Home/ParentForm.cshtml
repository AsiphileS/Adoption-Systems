@model Adoption_system.Models.ChildParent

@using (Html.BeginForm("AdoptionForm", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
        <div style="color; font-size:15px;">
            @ViewBag.Message
        </div>


    }
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #cfe788;
        }


        .container {
            width: 100%;
            margin: 40px auto;
            padding: 20px;
            /*background: #678119;*/
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }


        .form-group {
            margin-bottom: 20px;
            display: inline-block;
            padding-right: 30px;
        }

            .form-group label {
                display: block;
                margin-bottom: 10px;
            }

            .form-group input[type="file"] {
                width: 100%;
                padding: 10px;
                font-size: 16px;
            }

            .form-group input[type="text"],
            .form-group input[type="number"],
            .form-group select {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border: 1px solid #ccc;
            }

            .form-group input[type="radio"] {
                margin-right: 10px;
            }

        #nextButton {
            background-color: #008CBA;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
        }

            #nextButton:hover {
                background-color: #00698f;
            }

            #nextButton:active {
                background-color: #005579;
                transform: translateY(2px);
            }


        #adoptionForm {
            width: 50%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 10px;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            padding: 10px 20px;
            background-color: #008CBA;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button {
            padding: 10px 20px;
            background-color: #00698f;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #3e8e41;
            }

        .SubmitBtn {
            padding-left: 200px;
        }

        #ChildName {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        #AdoptionReason {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
    </style>
    <center>
        <table>

            <tr>
                <td>
                    @Html.LabelFor(m => m.ParentName)
                    @Html.TextBoxFor(m => m.ParentName, new { placeholder = "First Name" })
                    @Html.ValidationMessageFor(m => m.ParentName)
                </td>
                <td>
                    @Html.LabelFor(m => m.ParentSurname)
                    @Html.TextBoxFor(m => m.ParentSurname, new { placeholder = "Last Name" })
                    @Html.ValidationMessageFor(m => m.ParentSurname)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.CellPhone)
                    @Html.TextBoxFor(m => m.CellPhone, new { type = "tel" })
                    @Html.ValidationMessageFor(m => m.CellPhone)
                </td>
                <td>
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { type = "Email" })
                    @Html.ValidationMessageFor(m => m.Email)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.ChildName)
                    @Html.TextBoxFor(m => m.ChildName, new { placeholder = "First Name" })
                    @Html.ValidationMessageFor(m => m.ChildName)
                </td>
                <td>
                    @Html.LabelFor(m => m.ChildSurname)
                    @Html.TextBoxFor(m => m.ChildSurname, new { placeholder = "Child surname" })
                    @Html.ValidationMessageFor(m => m.ChildSurname)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.ChildAge)
                    @Html.TextBoxFor(m => m.ChildAge, new { type = "number", min = 0, max = 17 })
                    @Html.ValidationMessageFor(m => m.ChildAge)
                </td>
                <td>
                    @Html.LabelFor(m => m.Gender)
                    @Html.RadioButtonFor(m => m.Gender, "Male") Male<br />
                    @Html.RadioButtonFor(m => m.Gender, "Female") Female<br />
                    @Html.RadioButtonFor(m => m.Gender, "Other") Other<br />
                    @Html.ValidationMessageFor(m => m.Gender)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.DateOfBirth)
                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.DateOfBirth)
                </td>
                <td>
                    @Html.LabelFor(model => model.Race)
                    @Html.TextBoxFor(model => model.Race, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Race)

                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        @Html.Label("File", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="file" name="file" />
                        </div>
                    </div>

                </td>
                <td>
                    @Html.LabelFor(m => m.Question)
                    @Html.TextBoxFor(m => m.Question, new { placeholder = "Do you want us to Adopt your child permanantily or for small time" })
                    @Html.ValidationMessageFor(m => m.Question)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.Reason)
                    @Html.TextBoxFor(m => m.Reason, new { placeholder = "Why do you want us to adopt your child?" })
                    @Html.ValidationMessageFor(m => m.Reason)
                </td>
            </tr>
            <tr>
                <td>
                    <button id="backButton">Back</button>
                </td>
                <td class="nextBtn">
                    <button id="nextButton">Next</button>
                </td>
            </tr>
        </table>
    </center>
}

